{
  "name": "parla",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "eslint": "~8.0.0",
    "prettier": "~2.0.0",
    "turbo": "~2.4.2"
  },
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "prettier": "prettier -c \"packages/**/*.{js,jsx}\"",
    "prettier:ci": "prettier -c",
    "prettier:fix": "prettier -w \"packages/**/*.{js,jsx}\"",
    "test": "turbo run test"
  },
  "packageManager": "npm@10.8.1",
  "engines": {
    "node": ">=22"
  }
}
